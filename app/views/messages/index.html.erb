<div class="row">
	<div class="col-xs-0 col-sm-3 col-md-4"></div>
	<div class="col-12 col-sm-6 col-md-4">
		<div class="header text-center">
			<img class="logo" src="http://s3.amazonaws.com/codecademy-content/courses/learn-rails/img/logo-1m.svg">
			<h1 class="header__title">Messenger</h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-xs-0 col-sm-1 col-md-2"></div>
	<div class="col-12 col-sm-10 col-md-8">
		<div class="messages-section">
			<div class="messages__container">
				<% @messages.each do |message| %> 
				<div class="message"> 
					<p class="message__content"><%= message.content %></p> 
					<p class="message__time"><%= message.created_at.strftime("%m/%d/%Y %H:%M") %></p> 
				</div> 
				<% end %> 
				<%= link_to 'New Message', "messages/new", class: "btn btn-primary btn-lg button--link" %> 
			</div>
		</div>
	</div>
</div>